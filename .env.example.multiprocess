# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/bisnesgpt

# Database pool settings (per process)
DATABASE_POOL_API_MAX=20
DATABASE_POOL_WWEBJS_MAX=10
DATABASE_POOL_META_MAX=20

# ============================================
# Redis Configuration (for message queue)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Server Ports (Multi-Process Architecture)
# ============================================
API_PORT=3000         # Main API server
WWEBJS_PORT=3001      # WWebJS process
META_PORT=3002        # Meta Direct process

# Legacy port (if still using single process)
PORT=8443

# ============================================
# Process Configuration
# ============================================
PROCESS_NAME=api      # Set automatically by orchestrator
API_INSTANCES=2       # Number of API server instances
META_INSTANCES=2      # Number of Meta server instances

# Enable/disable specific processes
ENABLE_WWEBJS=true
ENABLE_META=true

# ============================================
# Chrome/Puppeteer Configuration (WWebJS)
# ============================================
CHROME_PATH=/usr/bin/google-chrome
CHROME_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# ============================================
# OpenAI Configuration
# ============================================
OPENAIKEY=your-openai-api-key-here

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ============================================
# Encryption
# ============================================
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# Health Check Endpoints
# ============================================
API_HEALTH_ENDPOINT=http://localhost:3000/health
WWEBJS_HEALTH_ENDPOINT=http://localhost:3001/health
META_HEALTH_ENDPOINT=http://localhost:3002/health

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_INTERVAL=60000  # milliseconds

# ============================================
# Message Queue Configuration
# ============================================
QUEUE_CLEANUP_INTERVAL=3600000  # 1 hour in milliseconds
MAX_QUEUE_AGE=86400000          # 24 hours in milliseconds

# ============================================
# Process Health Configuration
# ============================================
HEARTBEAT_INTERVAL=10000        # 10 seconds
HEALTH_CHECK_INTERVAL=30000     # 30 seconds
MAX_HEARTBEAT_AGE=60000         # 1 minute

# ============================================
# Rate Limiting (per process)
# ============================================
WWEBJS_MAX_MESSAGES_PER_SECOND=10
META_MAX_MESSAGES_PER_SECOND=20

# ============================================
# Development/Testing
# ============================================
NODE_ENV=production
DEBUG=false
